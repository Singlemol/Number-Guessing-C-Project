#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main ()
{
    int guess, random;
    int num_of_guess = 0;

    // Seed the random number generator using the current time
    srand(time(NULL));

    printf("Welcome to the world of number guessing!\n");

    // Generate a random number between 1 and 100 (inclusive)
    random = (rand() % 100) + 1;

    do
    {
        printf("\nEnter a number from 1 to 100: ");

        // Check if the input is a valid integer
        if (scanf("%d", &guess) != 1) {
            printf("Invalid input! Please enter a number.\n");
            // Clear the input buffer to prevent an infinite loop
            while (getchar() != '\n');
            continue; // Skip the rest of the loop iteration
        }

        num_of_guess++; // Increment the guess counter

        if (guess < random)
        {
            printf("Guess a larger number.\n");
        }
        else if (guess > random) // Condition added here
        {
            printf("Guess a smaller number.\n");
        }
        else
        {
            printf("Congratulations!! You successfully guessed the number in %d attempts.\n", num_of_guess);
        }
    } while(guess != random);

    printf("\nThanks for playing.\n");
    printf("Developer: Kazim Ali\n");

    return 0;
}
